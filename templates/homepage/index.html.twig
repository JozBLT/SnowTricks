{% extends 'base.html.twig' %}

{% block body %}
    <!-- Banner Section -->
    <div class="relative bg-cover bg-center"
         style="height: calc(100vh - 60px); background-image: url('{{ asset('images/snowboardBanner.jpg') }}');">
        <a href="#tricks-top-anchor"
           class="absolute bottom-4 right-4 bg-white text-black p-2 rounded-full shadow-lg hover:bg-gray-200 animate-bounce">
            ↓
        </a>
    </div>

    <!-- Tricks Anchor -->
    <div id="tricks-top-anchor"></div>
    {% if app.user and app.user.isVerified %}
        <p class="mx-4 my-4">
            <a class="bg-blue-500 text-white px-4 py-2 rounded text-sm hover:bg-blue-600"
               href="{{ path('tricks.create') }}">
                Créer un Tricks
            </a>
        </p>
    {% endif %}

    <!-- Tricks Section -->
    <div class="container mx-auto m-8 px-4">
        <!-- Tricks Container -->
        <div id="tricks-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
            {% include 'homepage/_tricks.html.twig' with {'tricks': tricks} %}
        </div>

        <!-- "Load More" Button -->
        <div class="text-center mt-4">
            <button id="load-more" class="bg-blue-500 text-white px-4 py-2 rounded text-sm hover:bg-blue-600">
                Afficher plus
            </button>
        </div>
    </div>
    <a href="#tricks-top-anchor" id="scroll-to-top"
       class="absolute right-4 bottom-4 bg-blue-500 text-white p-2 rounded-full shadow-lg hover:bg-blue-600 hidden">
        ↑
    </a>
{% endblock %}
