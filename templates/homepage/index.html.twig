{% extends 'base.html.twig' %}

{% block body %}
    <!-- Banner Section -->
    <div class="relative bg-cover bg-center"
         style="height: calc(100vh - 60px); background-image: url('{{ asset('images/snowboardBanner.jpg') }}');">
        <a href="#tricks-list"
           class="absolute bottom-4 right-4 bg-white text-black p-2 rounded-full shadow-lg hover:bg-gray-200 animate-bounce">
            ↓
        </a>
    </div>

    <!-- Tricks Section -->
    <div id="tricks-list" class="container mx-auto mt-8">
        {% if app.user and app.user.isVerified %}
            <p>
                <a class="bg-blue-500 text-white px-4 py-2 rounded text-sm hover:bg-blue-600"
                   href="{{ path('tricks.create') }}">
                    Créer un Tricks
                </a>
            </p>
        {% endif %}

        <!-- Conteneur pour les Tricks -->
        <div id="tricks-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-6">
            {% include 'homepage/_tricks.html.twig' with {'tricks': tricks} %}
        </div>

        <!-- Bouton "Afficher plus" -->
        <div class="text-center mt-4">
            <button id="load-more" class="bg-blue-500 text-white px-4 py-2 rounded text-sm hover:bg-blue-600">
                Afficher plus
            </button>
        </div>
    </div>
    <a href="#tricks-list" id="scroll-to-top" class="fixed bottom-4 right-4 hidden bg-blue-500 text-white p-2 rounded-full shadow-lg hover:bg-blue-600">
        ↑
    </a>
{% endblock %}
