{% extends 'base.html.twig' %}

{% block body %}
    <!-- Banner Section -->
    <div class="relative bg-cover bg-center"
         style="height: calc(100vh - 60px); background-image: url('{{ asset('images/snowboardBanner.jpg') }}');">
        <a href="#tricks-list"
           class="absolute bottom-4 right-4 bg-white text-black p-2 rounded-full shadow-lg hover:bg-gray-200 animate-bounce">
            ↓
        </a>
    </div>

    <!-- Tricks Section -->
    <div id="tricks-list" class="container mx-auto mt-8">
        {% if app.user and app.user.isVerified %}
            <p>
                <a class="bg-blue-500 text-white px-4 py-2 rounded text-sm hover:bg-blue-600"
                   href="{{ path('tricks.create') }}">
                    Créer un Tricks
                </a>
            </p>
        {% endif %}

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-6">
            {% for trick in tricks %}
                <div class="relative bg-white shadow-md rounded-lg overflow-hidden">
                    <a href="{{ path('tricks.show', {id: trick.id, slug: trick.slug}) }}" class="block">

                        {% if trick.thumbnail %}
                            <img src="{{ vich_uploader_asset(trick, 'thumbnailFile') }}" alt="{{ trick.title }}" class="w-full h-40 object-cover">
                        {% else %}
                            <img src="{{ asset('images/creative_snowboard_1.jpg') }}" alt="{{ trick.title }}" class="w-full h-40 object-cover">
                        {% endif %}

                        <div class="p-4">
                            <h2 class="text-lg font-bold mb-2">{{ trick.title }}</h2>
                        </div>
                    </a>

                    {% if app.user and app.user.isVerified %}
                        <div class="absolute bottom-4 right-4 flex space-x-2">
                            <a href="{{ path('tricks.edit', {id: trick.id}) }}" class="text-blue-500 hover:text-blue-600">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828zM3 17a1 1 0 001 1h12a1 1 0 100-2H4a1 1 0 00-1 1z" />
                                </svg>
                            </a>

                            <form action="{{ path('tricks.delete', {id: trick.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr ?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="text-red-500 hover:text-red-600">

                                    {% if app.user.isVerified %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M9 3H15V4H20V6H4V4H9V3ZM5 8V19C5 20.1 5.9 21 7 21H17C18.1 21 19 20.1 19 19V8H5ZM8 10H10V18H8V10ZM14 10H16V18H14V10Z" />
                                        </svg>
                                    {% endif %}
                                </button>
                            </form>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
