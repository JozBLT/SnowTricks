{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="w-full max-w-lg mx-auto my-16 bg-white p-8 rounded-lg shadow-md">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="text-red-500 bg-red-100 border-l-4 border-red-500 p-4 mb-4 rounded-lg">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="text-2xl font-bold text-center mb-8">Réinitialisation du mot de passe</h1>

        {{ form_start(requestForm, {'attr': {'class': 'space-y-6'}}) }}

        <div class="space-y-2">
            {{ form_row(requestForm.email, {
                'attr': {
                    'class': 'block w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500',
                    'placeholder': 'Entrez votre adresse email'
                }
            }) }}
        </div>

        <div class="text-sm text-gray-600 text-center">
            Entrez votre adresse email, un lien vous sera envoyé pour réinitialiser votre mot de passe.
        </div>

        <div class="text-center mt-6">
            <button type="submit" class="w-full py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600">
                Envoyer
            </button>
        </div>

        {{ form_end(requestForm) }}
    </div>
{% endblock %}
