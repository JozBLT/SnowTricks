{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="w-full max-w-lg mx-auto my-16 bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold text-center mb-8">Réinitialisez votre mot de passe</h1>

        {{ form_start(resetForm, {'attr': {'class': 'space-y-6'}}) }}
        <div class="space-y-4">
            <div>
                {{ form_label(resetForm.plainPassword.first, null, {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700 mb-2'
                    }
                }) }}
                {{ form_widget(resetForm.plainPassword.first, {
                    'attr': {
                        'class': 'block w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500',
                        'placeholder': 'Nouveau mot de passe'
                    }
                }) }}
            </div>
            <div>
                {{ form_label(resetForm.plainPassword.second, null, {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700 mb-2'
                    }
                }) }}
                {{ form_widget(resetForm.plainPassword.second, {
                    'attr': {
                        'class': 'block w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500',
                        'placeholder': 'Confirmation du mot de passe'
                    }
                }) }}
            </div>
        </div>
        <button type="submit"
                class="w-full py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600">
            Réinitialiser
        </button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
